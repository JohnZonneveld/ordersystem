<br>
<%= form_for( @user , remote: true) do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :username %>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </p>
    <p>
        <%= f.label :email %>
        <%= f.email_field :email %>
    </p>
    <% if current_user.admin %>
        <p>
            <%= f.label :admin %>
            <%= f.check_box :admin %>
        </p>
    <% end %>
    <%= f.submit %>
<% end %>