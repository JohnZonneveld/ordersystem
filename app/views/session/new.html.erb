<br>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<br>
<table class="table">
<h2>Log in</h2>
<td>
    <a class="btn btn-block btn-social btn-facebook" href='/auth/facebook'><span class="fa fa-facebook" ></span> Log in with Facebook</a>
    <a class="btn btn-block btn-social btn-google" href='/auth/google_oauth2'><span class="fa fa-google"></span> Log in with Google</a>
</td>
<td>
<%= form_for( :user , remote: true) do |f| %>
  <p><%= f.label :username %>
  <%= f.text_field (:username) %></p>
  <p><%= f.label :password %>
  <%= f.password_field (:password) %>&nbsp;
  <%= f.submit "Log In" %>
<% end %>
</table>
