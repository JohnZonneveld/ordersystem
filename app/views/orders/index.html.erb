<% if admin && @user %>
    <p>Order(s) in name of: <%= @user.name %></p>
    <p><%= link_to  " Create new order", new_user_order_path %></p>
<% else %>
    <p><%= link_to  "Create new order", new_order_path %>
<% end %>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Order #</th>
            <th scope="col">Ordered by</th>
            <th scope="col">Status</th>
            <th scope="col">Created</th>
            <th scope="col">Order total</th>
        </tr>
    </thead>
    <tbody>
        <%@orders.each do |order| %>
            <tr>
                <th scope="row"><%= order.id%></th>
                <td><%= order.user.name %></td>
                <td><%= order.approved ? 'Approved' : 'Pending' %></td>
                <td><%= order.created_at %></td>
                <td><%= number_to_currency(order.total_price) %>
                <td><%= link_to  "order details", order_path(order), class: "btn btn-primary btn-sm" %>
            </tr>
        <% end %>
    </tbody>
</table>