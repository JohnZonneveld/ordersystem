<br>
<% if !@item.nil? && @item.errors.any? %>
	<ul>
		<% @item.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= bootstrap_form_for(@item) do |f| %>
    <p><%= f.text_field :name %></p>
    <p><%= f.text_area :description %></p>
    <p><%= f.text_field :price %></p>
    <p><%= f.check_box :available %></p>
    <%= f.submit %>
<% end %>